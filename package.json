{
  "name": "play-framework-java-playground",
  "private": true,
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.11",
    "tailwindcss": "3.4.1"
  },
  "scripts": {
    "dev": "tailwindcss -i public/stylesheets/input.css -o public/stylesheets/output.css --watch",
    "build": "tailwindcss -i public/stylesheets/input.css -o public/stylesheets/output.css --minify",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,json}\""
  }
}
