{
  "name": "play-framework-java-playground",
  "private": true,
  "scripts": {
    "dev": "tailwindcss -i ../public/stylesheets/input.css -o ../public/stylesheets/output.css --watch=always && vite build --watch --emptyOutDir",
    "build": "tailwindcss -i ../public/stylesheets/input.css -o ../public/stylesheets/output.css --minify && vite build --emptyOutDir",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/node": "20.11.16",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.11",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "vite": "5.0.12"
  }
}
